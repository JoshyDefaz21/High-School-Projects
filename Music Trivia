/////JavaScript////
function quiz() {

	//alerts to greet the player
    alert("Welcome to my trivia game!");
  alert("This trivia is about music!");
    alert("Make sure you answer all the questions and enjoy it");

    //first trivia question
    var ans1 = prompt("What was The Rolling Stones' second album called?");
    if (ans1 == "The Rolling Stones No.2","The Rolling Stones N2","The Rolling stones 2") {
		alert("Yeah! You know what i'm talking about");
    } else {
   		alert("Incorrect!");  
    }

    //second trivia question
    var ans2 = prompt("November Rain was on which Guns 'N' Roses album?");
    if (ans2 == "Use your illusions 1") {
		alert("Perfect!");
    } else {
    	alert("Incorrect!");
    }
    
    //third trivia question
    var ans3 = prompt("What was the name of Michael Jackson famous dance move?");
    if (ans3 == "MoonWalk","moonwalk","moon walk") {
		alert("Correct! It was easy, i know");
    } else {
    	alert("Incorrect!");  
    }
  //fourth trivia question
    var ans4 = prompt("Which band recorded these songs: Highway To Hell, You Shook Me All Night Long and Back In Black?");
    if (ans4 == "AC/DC","ac/dc") {
		alert("Correct! Great job!");
    } else {
    	alert("Incorrect! good luck next time");  
    }
  //fifth trivia question
    var ans5 = prompt("Which band recorded these songs: Dream On, Sweet Emotion and Janie's Got A Gun?");
    if (ans5 == "AeroSmith","aerosmith") {
		alert("Correct! You did it!");
    } else {
    	alert("Incorrect! good luck next time");  
    }
  
  
  
}//closing bracket for the entire function - all the trivia questions must go before this bracket!




